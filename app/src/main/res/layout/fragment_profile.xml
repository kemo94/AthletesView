<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/profile_banner"
                    android:layout_width="match_parent"
                    android:layout_height="170dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="-24dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/athleteImage_imv"
                    android:layout_width="70dp"
                    android:layout_height="70dp" />

            </RelativeLayout>

            <com.apptcom.athletes.Views.CustomTextViewBold
                android:id="@+id/athleteName_txv"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="21sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.apptcom.athletes.Views.CustomTextView
                android:id="@+id/athleteBrief_txv"
                android:layout_margin="16dp"
                android:textColor="@color/black"
                android:gravity="left"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>